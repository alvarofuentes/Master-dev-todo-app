<!DOCTYPE html>
<html lang="es" class="dark">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Today - Gestor de Tareas</title>
  <link rel="stylesheet" href="/css/tailwind.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background-color: #0b0e14;
      color: #e2e8f0;
      display: flex;
      justify-content: center;
      min-height: 100vh;
      margin: 0;
    }

    .app-container {
      width: 100%;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      margin: 0 auto;
      position: relative;
      background-color: #0b0e14;
    }

    .layout-narrow {
      max-width: 380px;
    }

    .layout-wide {
      max-width: 800px;
    }

    .task-card {
      background-color: #171d29;
      transition: all 0.2s ease;
    }

    .task-card:hover {
      background-color: #1c2433;
    }

    .checkbox-custom {
      width: 24px;
      height: 24px;
      border: 2px solid #2d3748;
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.2s ease;
    }

    .checkbox-checked {
      background-color: #2563eb;
      border-color: #2563eb;
    }

    .input-glow:focus-within {
      box-shadow: 0 0 0 2px rgba(37, 99, 235, 0.2);
      border-color: rgba(37, 99, 235, 0.5);
    }

    /* Hide scrollbar */
    ::-webkit-scrollbar {
      width: 0px;
      background: transparent;
    }
  </style>
  <script>
    // Apply layout before content loads
    const savedLayout = localStorage.getItem('app-layout') || 'narrow';
    document.documentElement.dataset.layout = savedLayout;
  </script>
</head>

<body class="bg-[#0b0e14]">

  <div id="mainApp" class="app-container layout-narrow flex flex-col min-h-screen relative overflow-x-hidden">

    <!-- Top Header -->
    <header class="pt-12 px-8 flex justify-between items-center mb-8">
      <div class="flex items-center gap-3">
        <div class="bg-blue-600 rounded-lg p-1">
          <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        <h1 class="text-3xl font-bold text-white tracking-tight">Today</h1>
      </div>
      <div class="flex items-center gap-4">
        <button id="layoutToggle" class="text-gray-500 hover:text-white transition" title="Cambiar ancho">
          <svg id="narrowIcon" class="hidden w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4" />
          </svg>
          <svg id="wideIcon" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M8 4H4m0 0v4m0-4l5 5m7-5h4m0 0v4m0-4l-5 5M8 20H4m0 0v-4m0 4l5-5m7 5h4m0 0v-4m0 4l-5-5" />
          </svg>
        </button>
        <button class="text-gray-500 hover:text-white transition">
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M12 8c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zm0 2c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm0 6c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2z" />
          </svg>
        </button>
      </div>
    </header>

    <!-- Task Input Form -->
    <section class="px-6 mb-10">
      <form action="/tasks" method="POST"
        class="input-glow relative flex items-center bg-[#171d29] border border-gray-800 rounded-2xl p-4 transition-all">
        <input type="text" name="title" placeholder="What needs to be done?" required style="color: white !important;"
          class="bg-transparent border-none outline-none text-white placeholder-gray-500 w-full text-lg pr-12 focus:ring-0" />
        <!-- Mini toggle for priority -->
        <label class="absolute right-14 cursor-pointer text-gray-600 hover:text-yellow-500 transition"
          title="Mark as priority">
          <input type="checkbox" name="priority" class="hidden peer">
          <svg class="w-6 h-6 peer-checked:text-yellow-500" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z" />
          </svg>
        </label>
        <button type="submit"
          class="bg-blue-600 hover:bg-blue-500 text-white rounded-full p-2 transition shadow-lg shadow-blue-900/20">
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M12 4v16m8-8H4" />
          </svg>
        </button>
      </form>
    </section>

    <!-- Main Content Containers -->
    <main class="px-6 flex-grow pb-24">
      <% const priorityTasks=tasks.filter(t=> t.priority && !t.completed);
        const otherTasks = tasks.filter(t => !t.priority || t.completed);
        const activeCount = tasks.filter(t => !t.completed).length;
        %>

        <!-- PRIORITY Section -->
        <% if (priorityTasks.length> 0) { %>
          <div class="mb-8">
            <h2 class="text-xs font-bold text-gray-500 uppercase tracking-widest mb-4 px-2">Priority</h2>
            <div class="space-y-3">
              <% priorityTasks.forEach(task=> { %>
                <article class="task-card rounded-2xl p-5 flex items-center justify-between group">
                  <div class="flex items-center gap-4 flex-grow cursor-pointer"
                    onclick="this.nextElementSibling.submit()">
                    <div class="checkbox-custom <%= task.completed ? 'checkbox-checked' : '' %>">
                      <% if (task.completed) { %>
                        <svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
                        </svg>
                        <% } %>
                    </div>
                    <span class="text-gray-200 font-medium truncate max-w-[200px]">
                      <%= task.title %>
                    </span>
                  </div>
                  <form action="/tasks/<%= task.id %>/toggle" method="POST" class="hidden"></form>

                  <div class="flex items-center gap-2">
                    <form action="/tasks/<%= task.id %>/delete" method="POST">
                      <button type="submit"
                        class="text-gray-700 hover:text-red-500 transition opacity-0 group-hover:opacity-100">
                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                      </button>
                    </form>
                  </div>
                </article>
                <% }) %>
            </div>
          </div>
          <% } %>

            <!-- EVERYTHING ELSE Section -->
            <div class="mb-8">
              <h2 class="text-xs font-bold text-gray-500 uppercase tracking-widest mb-4 px-2">Everything Else</h2>
              <div class="space-y-3">
                <% if (otherTasks.length===0 && priorityTasks.length===0) { %>
                  <div class="text-center py-10 opacity-40">
                    <p class="text-gray-400 italic">No tasks yet. Add one above!</p>
                  </div>
                  <% } %>
                    <% otherTasks.forEach(task=> { %>
                      <article class="task-card rounded-2xl p-5 flex items-center justify-between group">
                        <div class="flex items-center gap-4 flex-grow cursor-pointer"
                          onclick="this.nextElementSibling.submit()">
                          <div class="checkbox-custom <%= task.completed ? 'checkbox-checked' : '' %>">
                            <% if (task.completed) { %>
                              <svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3"
                                  d="M5 13l4 4L19 7" />
                              </svg>
                              <% } %>
                          </div>
                          <span
                            class="text-gray-200 font-medium truncate max-w-[200px] <%= task.completed ? 'line-through text-gray-500' : '' %>">
                            <%= task.title %>
                          </span>
                        </div>
                        <form action="/tasks/<%= task.id %>/toggle" method="POST" class="hidden"></form>

                        <div class="flex items-center gap-2">
                          <form action="/tasks/<%= task.id %>/delete" method="POST">
                            <button type="submit"
                              class="text-gray-700 hover:text-red-500 transition opacity-0 group-hover:opacity-100">
                              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                              </svg>
                            </button>
                          </form>
                        </div>
                      </article>
                      <% }) %>
              </div>
            </div>
    </main>

    <!-- Sticky Footer -->
    <footer id="footer"
      class="fixed bottom-0 left-1/2 -translate-x-1/2 w-full max-w-[380px] bg-[#0b0e14]/80 backdrop-blur-lg border-t border-gray-900 px-8 py-6 flex justify-between items-center z-10 transition-all duration-400">
      <div class="text-gray-500 text-sm font-medium">
        <%= activeCount %> tasks remaining
      </div>
      <div class="flex items-center gap-6">
        <button class="text-gray-500 hover:text-white transition">
          <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </button>
        <button class="text-gray-500 hover:text-white transition">
          <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </button>
      </div>
    </footer>

    <!-- FAB (Floating Action Button) -->
    <button
      class="fixed bottom-24 right-8 z-20 bg-blue-600 hover:bg-blue-500 text-white w-14 h-14 rounded-2xl flex items-center justify-center shadow-xl shadow-blue-600/30 transition-transform hover:scale-105 active:scale-95">
      <svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
      </svg>
    </button>

  </div>

  <script>
    const layoutToggle = document.getElementById('layoutToggle');
    const mainApp = document.getElementById('mainApp');
    const footer = document.getElementById('footer');
    const wideIcon = document.getElementById('wideIcon');
    const narrowIcon = document.getElementById('narrowIcon');

    function updateLayout(layout) {
      mainApp.classList.remove('layout-narrow', 'layout-wide');
      mainApp.classList.add('layout-' + layout);

      if (footer) {
        footer.style.maxWidth = layout === 'narrow' ? '380px' : '800px';
      }

      localStorage.setItem('app-layout', layout);
      if (layout === 'wide') {
        narrowIcon.classList.remove('hidden');
        wideIcon.classList.add('hidden');
      } else {
        narrowIcon.classList.add('hidden');
        wideIcon.classList.remove('hidden');
      }
    }

    layoutToggle.addEventListener('click', () => {
      const current = mainApp.classList.contains('layout-narrow') ? 'narrow' : 'wide';
      updateLayout(current === 'narrow' ? 'wide' : 'narrow');
    });

    // Init
    updateLayout(localStorage.getItem('app-layout') || 'narrow');
  </script>

</body>

</html>